citHeader("When using wordnet in publications, please cite both the wordnet interface, the Jawbone interface, and WordNet itself:")

## <FIXME>
## Remove this when requiring R >= 2.8.0.
if(!exists("meta") || is.null(meta)) meta <- packageDescription("wordnet")
## </FIXME>

year <- sub("-.*", "", meta$Date)
note <- sprintf("R package version %s.", meta$Version)

citEntry(entry="Manual",
         title = "wordnet: WordNet Interface",
         author = personList(as.person("Ingo Feinerer")),
         year         = year,
         note         = note,
         textVersion = 
         paste("Ingo Feinerer",
               sprintf("(%s).", year),
               "wordnet: WordNet Interface.",
	       note),
	 header = "To cite wordnet, the R via Java interface to WordNet, please use:"
)

citEntry(entry="Manual",
         title = "Jawbone Java WordNet API",
         author = personList(as.person("Mike Wallace")),
         year         = "2007",
         note         = "\\url{http://mfwallace.googlepages.com/jawbone.html}",
         textVersion = 
         paste("Mike Wallace (2007).",
               "Jawbone Java WordNet API.",
	       "http://mfwallace.googlepages.com/jawbone.html."),
	 header = "To cite Jawbone, the Java interface to WordNet, please use:"
)

citEntry(entry="Book",
         title = "WordNet: An Electornic Lexical Database",
         author = personList(as.person("Christiane Fellbaum")),
         year         = "1998",
         publisher    = "Bradford Books",
         
         textVersion = 
         paste("Christiane Fellbaum (1998).", 
               "WordNet: An Electornic Lexical Database.",
               "Bradford Books."),
	 header = "To cite WordNet, please use:"
)
